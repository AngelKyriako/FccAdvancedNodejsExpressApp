div#authentication
  .row
    .col-sm-5.col-sm-offset-1
      #signin-local
        h2.display-4 Login
        form(method='POST' action='/auth/local')
          div.form-group
            label(for='username') Username:
            input#login-username.form-control(type='alphanumeric', placeholder='your username' name='username')
          div.form-group
            label(for='pw') Password:
            input#login-password.form-control(type='password' name='password')
          button.btn.btn-success(type='submit') Sign in

