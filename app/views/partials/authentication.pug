    .col-sm-5.col-sm-offset-1
      #signup-local
        h2.display-4 Sign Up
        form(method='POST' action='/auth/local/register')
          div.form-group
            label(for='username') Username:
            input#register-username.form-control(type='alphanumeric', placeholder='your username' name='username')
          div.form-group
            label(for='name') Name:
            input#register-name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='password') Password:
            input#register-password.form-control(type='password' name='password')
          div.form-group
            label(for='password-confirm') Confirm Password:
            input#register-password-confirm.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up
